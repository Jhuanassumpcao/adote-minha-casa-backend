{
  "name": "adote-minha-casa",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.ts",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "vercel-build": "node ace migration:run --force",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.ts",
    "#exceptions/*": "./app/exceptions/*.ts",
    "#models/*": "./app/models/*.ts",
    "#mails/*": "./app/mails/*.ts",
    "#services/*": "./app/services/*.ts",
    "#listeners/*": "./app/listeners/*.ts",
    "#events/*": "./app/events/*.ts",
    "#middleware/*": "./app/middleware/*.ts",
    "#validators/*": "./app/validators/*.ts",
    "#providers/*": "./providers/*.ts",
    "#policies/*": "./app/policies/*.ts",
    "#abilities/*": "./app/abilities/*.ts",
    "#database/*": "./database/*.ts",
    "#start/*": "./start/*.ts",
    "#tests/*": "./tests/*.ts",
    "#config/*": "./config/*.ts"
  },
  "devDependencies": {
    "@adonists/assembler": "^7.6.1",
    "@adonists/eslint-config": "^1.3.0",
    "@adonists/prettier-config": "^1.3.0",
    "@adonists/tsconfig": "^1.3.0",
    "@japa/api-client": "^2.0.3",
    "@japa/assert": "^3.0.0",
    "@japa/plugin-adonists": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@swc/core": "^1.5.7",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.12.12",
    "eslint": "^8.57.0",
    "hot-hook": "^0.2.6",
    "pino-pretty": "^11.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@adonists/auth": "^9.2.1",
    "@adonists/core": "^6.9.0",
    "@adonists/cors": "^2.2.1",
    "@adonists/lucid": "^20.6.0",
    "@vinets/vine": "^2.0.0",
    "luxon": "^3.4.4",
    "mysql2": "^3.10.1",
    "reflect-metadata": "^0.2.2"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "eslintConfig": {
    "extends": "@adonists/eslint-config/app"
  },
  "prettier": "@adonists/prettier-config"
}
