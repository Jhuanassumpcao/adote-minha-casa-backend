{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020", // or another allowed value like 'esnext', 'node16', etc.
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "#start/*": ["start/*"] // Ensure this maps correctly to your module paths
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
